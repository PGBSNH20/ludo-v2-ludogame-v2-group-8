@page
@model LudoGameV2.Pages.Ludo.LoadGameModel
@{
}

<h4>Create new game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="session">Select session:</label>
                <input asp-for="SessionName" class="form-control" placeholder="Player Name" style="margin-bottom: 10px" />
            </div>
            <div class="form-group">
                <input type="submit" value="Load Player" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (Model.containsAccountId)
{
    <link href="~/css/style.css" rel="stylesheet" />
    <div id="main">
        <div class="section group">
            <div class="col span_1_of_2">
                <div id="board"></div>

                <div id="dice" onclick="randomNum()"></div>

                @foreach (var piece in Model.Pieces)
                {
                    <div class="pawns"
                         id=@piece.Name
                         onclick="randomMove(@("'" + piece.Color + "'"),@piece.Name.Substring(piece.Name.IndexOf('n') + 1))"
                         style="background-color: @piece.Color; top: @piece.TopPosition; left: @piece.LeftPosition"></div>
                }
            </div>
            <h2 style="font-size: 32px">Current Player:</h2>
            <h4 id="player" style="color: yellow">yellow</h4>
            <p id="badtext" style="font-size: 22px"></p>
            <p id="takeoutpiece-log" style="color: black; font-size: 22px"></p>
            <p id="action-log" style="color: black; font-size: 22px"></p>
            <p id="knockout-log" style="color: black; font-size: 22px"></p>
        </div>
    </div>
}


<script src="~/lib/signalr.js"></script>
<script src="~/js/LudoGame.js"></script>
