@page
@model LudoGameV2.Pages.Ludo.LoadGameModel
@{
}

<h4>Create new game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="session">Select session:</label>
                <input asp-for="SessionName" class="form-control" placeholder="Player Name" style="margin-bottom: 10px" />
            </div>
            <div class="form-group">
                <input type="submit" value="Load Player" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (Model.containsAccountId)
{
    <link href="~/css/style.css" rel="stylesheet" />
    <div id="main">
        <div class="section group">
