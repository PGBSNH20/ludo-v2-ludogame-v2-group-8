@model LudoGameV2.Pages.Ludo.CreateSessionModel
@{
}
<h4>Create new game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
