                <input asp-for="NewSession.SessionName" class="form-control" placeholder="Session name" style="margin-bottom: 10px" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h4>@Model.GameBoardSessionMessage</h4>